<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/home_main_color</item>
        <item name="colorPrimaryDark">@color/home_main_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme"  parent="@style/BaseAppTheme"></style>

    <!--editText的主题-->
    <style name="et_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/my_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="et_article_edit" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/home_main_color</item>
    </style>


    <!--**************************  样式  ***********************-->
    <!--主页底部menu的样式-->
    <style name="main_btm_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/main_btm_padding</item>
        <item name="change_text_size">@dimen/main_btm_ts</item>
        <item name="android:clickable">true</item>
        <item name="change_color">@color/tab_color</item>
        <item name="change_text_color">#ecf0f1</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <!--articleShowActivity 界面 imageButton-->
    <style name="fml_menu_ib">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/fb_bg</item>
    </style>

    <!--loginActivity界面 editText-->
    <style name="login_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_et_height</item>
        <item name="android:layout_marginTop">@dimen/login_et_margin_top</item>
        <item name="android:drawablePadding">@dimen/login_et_drawable_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:theme">@style/et_theme</item>
    </style>

    <!--modifyUserInfoActivity界面-->
    <style name="modify_rl_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>
    <style name="modify_left_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="modify_right_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#88888888</item>
        <item name="android:maxWidth">200dp</item>
    </style>
    <style name="modify_gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@color/bg_gray_color</item>
    </style>

    <!-- 图片设置popwindow -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/show_popwindow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/hidden_popwindow_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!-- dialog 的style -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--exe  toolbar上RadioButton的样式-->
    <style name="tb_rb_base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/rb_text_selector</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="tb_rb_left" parent="@style/tb_rb_base">
        <item name="android:background">@drawable/rb_left_selector</item>
    </style>
    <style name="tb_rb_right" parent="@style/tb_rb_base">
        <item name="android:background">@drawable/rb_right_selector</item>
    </style>
    <!-- 提示栏style -->
    <style name="tips_coulumn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="tipsTextSize">13sp</item>
        <item name="lineColor">#20000000</item>
        <item name="lineHeight">0.5dp</item>
    </style>

</resources>
