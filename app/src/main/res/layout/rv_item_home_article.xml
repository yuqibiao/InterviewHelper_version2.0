<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_rv_item_height"
    android:layout_marginLeft="@dimen/home_rv_item_space"
    android:layout_marginRight="@dimen/home_rv_item_space"
    android:layout_marginTop="@dimen/home_rv_item_space"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/home_rv_item_radius"
    app:cardElevation="@dimen/home_rv_item_cd_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/home_rv_item_padding">

        <TextView
            android:id="@+id/tv_article_item_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/home_rv_item_space"
            android:layout_weight="1"
            android:maxLines="3"
            android:padding="@dimen/home_vp_header_tv_padding"
            android:text=""
            android:textSize="@dimen/home_vp_title_ts" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/home_rv_item_radius">

            <ImageView
                android:id="@+id/iv_article_item_icon"
                android:layout_width="@dimen/home_rv_item_iv_size"
                android:layout_height="@dimen/home_rv_item_iv_size"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>

