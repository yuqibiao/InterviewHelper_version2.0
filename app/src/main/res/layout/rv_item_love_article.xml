<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/love_rv_item_space"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/love_rv_item_cv_radius"
        app:cardElevation="@dimen/love_rv_item_cv_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_love_item_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/love_rv_item_height"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon" />

            <TextView
                android:id="@+id/tv_love_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_trans_gray_color"
                android:maxLines="2"
                android:padding="@dimen/love_rv_item_tv_padding"
                android:text="文章标题"
                android:textColor="@color/my_white"
                android:textSize="@dimen/love_rv_item_tv_size" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

